@model ExpenseManager.Models.Expense

<form method="post" asp-action="Update">
    <input asp-for="Id" hidden/>
    <div class="border pt-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-5">Update expense</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row justify-content-around pl-3 pr-3">
                    <div class="col-6">
                        <label asp-for="ExpenseName"></label>
                        <input asp-for="ExpenseName" class="form-control" />
                        <span asp-validation-for="ExpenseName" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="Amount"></label>
                        <input type="number" asp-for="Amount"  class="form-control" />
                        <span asp-validation-for="ExpenseName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Update" />
                        </div>
                        <div class="col">
                            <a class="nav-link text-dark btn btn-danger w-100" asp-action="Index">Go back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


